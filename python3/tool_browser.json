[
  {
    "type": "function",
    "function": {
      "name": "open_browser",
      "description": "打开浏览器并访问指定URL",
      "parameters": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "description": "要访问的URL地址"
          },
          "browser": {
            "type": "string",
            "description": "浏览器类型，'firefox' 或 'chrome'，默认自动选择",
            "enum": ["firefox", "chrome", "auto"],
            "default": "auto"
          },
          "headless": {
            "type": "boolean",
            "description": "是否使用无头模式（不显示浏览器界面），默认false",
            "default": false
          },
          "timeout": {
            "type": "integer",
            "description": "页面加载超时时间（秒），默认30秒",
            "default": 30
          }
        },
        "required": ["url"]
      }
    }
  },
  {
    "type": "function",
    "function": {
      "name": "get_page_content",
      "description": "使用浏览器获取网页内容，包括动态加载的内容",
      "parameters": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "description": "要获取内容的URL地址"
          },
          "wait_time": {
            "type": "integer",
            "description": "等待页面加载完成的时间（秒），默认5秒",
            "default": 5
          },
          "extract_text": {
            "type": "boolean",
            "description": "是否提取纯文本内容，默认true",
            "default": true
          },
          "browser": {
            "type": "string",
            "description": "浏览器类型，'firefox' 或 'chrome'，默认自动选择",
            "enum": ["firefox", "chrome", "auto"],
            "default": "auto"
          }
        },
        "required": ["url"]
      }
    }
  },
  {
    "type": "function",
    "function": {
      "name": "screenshot",
      "description": "对网页进行截图",
      "parameters": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "description": "要截图的URL地址"
          },
          "output_path": {
            "type": "string",
            "description": "截图保存路径，默认在当前目录生成截图文件"
          },
          "browser": {
            "type": "string",
            "description": "浏览器类型，'firefox' 或 'chrome'，默认自动选择",
            "enum": ["firefox", "chrome", "auto"],
            "default": "auto"
          },
          "full_page": {
            "type": "boolean",
            "description": "是否截取完整页面（包括滚动部分），默认false",
            "default": false
          }
        },
        "required": ["url"]
      }
    }
  }
]